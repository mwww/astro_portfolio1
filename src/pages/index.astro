---
import Layout from '../layouts/mainLayout.astro';
// import Card from '../components/Card.astro';
import MeAndSkills from '../components/indexSections/meAndSkills.astro';

const skills = [
	{skillType: 'Programming Languages', icons: [
		{
			file:'JavaScript.svg', alt:'JavaScript'
		},
		{
			file:'TypeScript.svg', alt:'TypeScript'
		},
		{
			file:'Python.svg', alt:'Python'
		},
		{
			file:'Golang.svg', alt:'Golang'
		},
		{
			file:'Bash.svg', alt:'Bash'
		}
	]},
	{skillType: 'Something', icons: [
		{
			file:'js.png', alt:'js'
		}
	]}
]
---

<Layout title="Welcome to Astro.">
	<main>
		<!-- <div class="spacer"></div> -->
		<div class="bg"></div>
		<MeAndSkills {skills}/>
		<div class="spacer"></div>
		<div class="spacer"></div>
		<div class="spacer"></div>
		<div class="spacer"></div>
	</main>
</Layout>

<style lang="scss">
	main {
		margin: auto;
		padding: 0 1.5rem;
		max-width: 75rem;

		> .spacer {
			height: 35vh;
		}
	}
</style>